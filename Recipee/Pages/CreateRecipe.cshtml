@page
@model CreateRecipeModel

<form method="post">
    <div class="form-group">
        <label asp-for="Recipe.Title"></label>
        <input asp-for="Recipe.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Recipe.Description"></label>
        <textarea asp-for="Recipe.Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Ingredients</label>
        <div class="ingredients-container">
            <!-- Ingredients will be added here -->
        </div>
        <button type="button" id="addIngredient" class="btn btn-info">Add Ingredient</button>
    </div>

    <div class="form-group">
        <label asp-for="Recipe.Instructions"></label>
        <textarea asp-for="Recipe.Instructions" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Recipe.ImageUrl"></label>
        <input asp-for="Recipe.ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.querySelector('.ingredients-container');
            document.getElementById('addIngredient').addEventListener('click', function () {
                const ingredientHtml = `
                    <div class="form-group ingredient-group">
                        <input type="text" name="Recipe.Ingredients[].Name" class="form-control" placeholder="Ingredient Name" required />
                        <input type="text" name="Recipe.Ingredients[].Amount" class="form-control" placeholder="Amount" required />
                        <button type="button" class="remove-ingredient btn btn-danger">Remove</button>
                    </div>`;
                container.insertAdjacentHTML('beforeend', ingredientHtml);
            });

            container.addEventListener('click', function (e) {
                if (e.target.classList.contains('remove-ingredient')) {
                    e.target.parentElement.remove();
                }
            });
        });
    </script>
}
