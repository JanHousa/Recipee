@page
@model LoginModel

<div class="login-container">
    <h2>Přihlášení</h2>

    <form method="post" class="login-form">
        <div asp-validation-summary="All" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password" class="form-label">Heslo</label>
            <input asp-for="Input.Password" type="password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Přihlásit se</button>
    </form>

    <!-- Přidání odkazu na registraci -->
    <div class="register-link">
        <p>Nemáte ještě účet? <a asp-page="/Register" class="register-anchor">Zaregistrujte se zde</a></p>
    </div>
</div>
